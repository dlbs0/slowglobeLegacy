{
  "compilerOptions": {
    "target": "esnext",
    "experimentalDecorators": true,
    "useDefineForClassFields": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "baseUrl": "../engine/src",
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true,
    "moduleResolution": "node"
  },
  "include": ["**/*.d.ts", "**/*.ts", "**/*.vue", "./**/*.vue", "**/*.js"]
}
